<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facebook Login Page</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   <link rel="stylesheet" href="/styles/adminlogin.css" />

</head>

<body>
      <div class="content">
        <div class="flex-div">
            <div class="name-content">
                <h1 class="logo">Facebook</h1>
                <p>Connect with friends and the world around you on Facebook.</p>
            </div>
            
            <div class="formdiv">
                <form action="/admin/login" method="post">
                <h5>Admin login</h5>
                    <input type="text" id="message" value="{{message}}" name="message" hidden>

                    <input type="text" name="email" id="email" placeholder="Email id" >
                    <input type="password" name="password" id="password" placeholder="Password" >
                    
                    <button type="submit" name="action" class="login">Log In</button>
                    <hr>
                </form>

                <p class="adminlogin">log in as <a href="/user/login">user</a></p>
                
            </div>
        </div>
    </div>

    <script>
        const message = document.getElementById("message").value;
        
        if (message) {
            Swal.fire({
                title: 'Notification',
                text: message,
                icon: 'info'
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector('form').addEventListener("submit", formValidate);
        });

      function formValidate(e) {
    e.preventDefault();

    let email = document.getElementById("email").value;  
    let password = document.getElementById("password").value;

    // Validate the required fields
    if (email === "" || password === "") {
        
        Swal.fire({
            icon: 'warning',
            title: 'Oops...',
            text: 'All fields are required!'
        });
        return false;
    } else {
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
           
            Swal.fire({
                icon: 'error',
                title: 'Invalid Email',
                text: 'Please enter a valid email address'
            });
            return false;
        }
    }

    // If everything is fine, submit the form
    e.target.submit();
}

    </script>

</body>

</html>